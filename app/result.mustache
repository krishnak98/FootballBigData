<!DOCTYPE html PUBLIC "-//IETF//DTD HTML 2.0//EN">
<html>
  <head>
    <title>Result</title>
    <link type="text/css" rel="stylesheet" href="table2.css" />
     <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
 <body>
 <h1 style="text-align:center; margin-top: 50px"> Player Stats </h1>
<div class="container">
    <div class="table-container">
        <table class="table-resp">
            <tbody>
            <tr>
                <td>Goals</td>
                <td>{{goals}}</td>
            </tr>
            <tr>
                <td>Goals by Penalties</td>
                <td>{{penalty_goals}}</td>
            </tr>
            <tr>
                <td>Goals by Freekicks</td>
                <td>{{freekick_goals}}</td>
            </tr>
            <tr>
                <td>Total Shots</td>
                <td>{{total_shots}}</td>
            </tr>
            <tr>
                <td>Shots on Target</td>
                <td>{{shots_on_target}}</td>
            </tr>
            <tr>
                <td>Shots Accuracy</td>
                <td>{{shot_accuracy}}%</td>
            </tr>
            <tr>
                <td>Conversion Rate</td>
                <td>{{conv_rate}}%</td>
            </tr>
            <tr style="background-color: #FFFFE0">
                <td>Yellow Cards</td>
                <td>{{yellow_cards}}</td>
            </tr>
            <tr style="background-color: #FFE0E0">
                <td>Red Cards</td>
                <td>{{red_cards}}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="chart-container">
        <div style="height: 250px; width: 250px">
            <canvas id="goalsChart" width="250" height="250"></canvas>
        </div>
        <script>
            var ctx = document.getElementById('goalsChart').getContext('2d');
            var goalsChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Goals by Left Foot', 'Goals by Right Foot', 'Goals by Header'],
                    datasets: [{
                        label: 'Goals by Body Part',
                        data: [{{lefty_goals}}, {{righty_goals}}, {{header_goals}}],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)', // Left Foot - Red
                            'rgba(54, 162, 235, 0.7)', // Right Foot - Blue
                            'rgba(255, 206, 86, 0.7)' // Header - Yellow
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    // Customize options as needed
                }
            });
        </script>
    </div>
</div>
</body>
</html>